{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "paths": {
      "*": [
        "types/*.d.ts"
      ]
    },
    "typeRoots": [
      "types/*.d.ts"
    ],
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "./node_modules"
  ]
}